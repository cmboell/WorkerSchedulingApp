@model Position

@{
    ViewData["PositionName"] = $"{ViewBag.Operation} Position";
}
<!--add position view-->
<h1 class="display-4">@ViewBag.Operation Class</h1>

<form asp-action="Add" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="PositionName"></label>
        <input asp-for="PositionName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="HoursPerShift"></label>
        <input asp-for="HoursPerShift" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Worker"></label>
        <select asp-for="WorkerId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Workers,"WorkerId","FullName"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="Day"></label>
        <select asp-for="DayId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Days,"DayId","Name"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="MilitaryTime"></label>
        <input asp-for="MilitaryTime" class="form-control" />
    </div>

    @if (ViewBag.Operation == "Edit")
    {
        <input type="hidden" asp-for="PositionId" />
    }

    <button type="submit" class="btn btn-dark">@ViewBag.Operation</button>
    <a asp-action="Index" asp-controller="Home" asp-route-id="@ViewBag.DayId"
       class="btn btn-outline-dark">Cancel</a>
</form>