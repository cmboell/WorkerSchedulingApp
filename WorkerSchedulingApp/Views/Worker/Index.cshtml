@model IEnumerable<Worker>

@{
    ViewData["PositionName"] = "Worker";
}
<!--worker index-->
<div class="text-center">
    <h1 class="display-4">Workers</h1>
</div>

<a asp-action="Add" class="ml-3">Add Worker</a>

<table class="table">
    <thead>
        <tr><th>First Name</th><th>Last Name</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (Worker worker in Model)
        {
            <tr>
                <td>@worker.FirstName</td>
                <td>@worker.LastName</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@worker.WorkerId"
                       class="btn btn-outline-dark">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

